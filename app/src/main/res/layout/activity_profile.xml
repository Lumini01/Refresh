<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:padding="@dimen/default_margin"
    tools:context=".ProfileActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:title="Settings"
        android:titleTextColor="@color/textSecondary"
        app:itemIconTint="@color/iconTint"
        android:layout_marginBottom="@dimen/default_margin">

        <ImageView
            android:id="@+id/settingsLogo"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            app:srcCompat="@drawable/ic_placeholder" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/default_margin"
            android:paddingEnd="@dimen/default_margin">

            <!-- Section 1: Account -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/textSecondary"
                android:paddingTop="@dimen/default_margin"
                android:paddingBottom="@dimen/padding_medium"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/default_margin" />

            <!-- Account Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="@dimen/card_view_padding"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/padding_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_placeholder"
                    app:tint="@color/iconTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Settings"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage your account details"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Change Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="@dimen/card_view_padding"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/padding_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_placeholder"
                    app:tint="@color/iconTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update your password for security"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Manage Linked Accounts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="@dimen/card_view_padding"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/padding_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_placeholder"
                    app:tint="@color/iconTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Linked Accounts"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connect or disconnect external accounts"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Section 2: Diary and Notifications -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diary and Notifications"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/textSecondary"
                android:paddingTop="@dimen/default_margin"
                android:paddingBottom="@dimen/padding_medium"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/default_margin" />

            <!-- Diary Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="@dimen/card_view_padding"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/padding_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/iconTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diary Settings"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage your food and activity diary"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Notification Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="@dimen/card_view_padding"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/padding_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_placeholder"
                    app:tint="@color/iconTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification Settings"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customize your notification preferences"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        app:itemIconTint="@color/iconTint"
        app:itemTextColor="@color/textSecondary"
        app:menu="@menu/bottom_nav_menu"
        android:layout_marginTop="@dimen/minimal_margin" />
</LinearLayout>
