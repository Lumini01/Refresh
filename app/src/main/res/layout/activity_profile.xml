<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:padding="@dimen/default_margin"
    tools:context=".ProfileActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:layout_marginBottom="@dimen/default_margin">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Back Arrow"
            android:padding="@dimen/padding_small"
            android:layout_gravity="start" />

        <!-- Title -->
        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_size_large"
            android:layout_gravity="center" />

        <!-- Gear Icon -->
        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"
            android:background="@null"
            android:padding="@dimen/padding_small"
            android:layout_gravity="end" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Section -->
            <LinearLayout
                android:id="@+id/profileSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin">

                <!-- Profile Picture Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_background"
                    android:padding="@dimen/card_view_padding"
                    android:layout_marginBottom="@dimen/padding_small">

                    <!-- Profile Picture -->
                    <ImageView
                        android:id="@+id/profilePicture"
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:src="@drawable/ic_profile_placeholder"
                        android:contentDescription="Profile Picture"
                        android:layout_marginEnd="@dimen/padding_medium" />

                    <!-- Name and Age -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/profileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/textSecondary" />

                        <TextView
                            android:id="@+id/profileAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age: 25"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/textSecondary" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Current Weight Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="@dimen/card_view_padding"
                    android:layout_marginBottom="@dimen/padding_small">

                    <TextView
                        android:id="@+id/currentWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Weight: [value]"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/textSecondary" />
                </LinearLayout>

                <!-- Goal Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="@dimen/card_view_padding"
                    android:layout_marginBottom="@dimen/padding_small">

                    <TextView
                        android:id="@+id/weightGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goal: Gain/Lose/Maintain Weight"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/textSecondary" />
                </LinearLayout>

                <!-- Diet Type Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="@dimen/card_view_padding"
                    android:layout_marginBottom="@dimen/padding_small">

                    <TextView
                        android:id="@+id/dietType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diet: Vegan/Vegetarian/Gluten-Free, etc."
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/textSecondary" />
                </LinearLayout>
            </LinearLayout>

            <!-- Section 1: Account -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/textSecondary"
                android:paddingTop="@dimen/default_margin"
                android:paddingBottom="@dimen/padding_medium"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/default_margin" />

            <!-- Account Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="@dimen/card_view_padding"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/padding_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_placeholder"
                    app:tint="@color/iconTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Settings"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage your account details"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Change Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="@dimen/card_view_padding"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/padding_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_placeholder"
                    app:tint="@color/iconTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update your password for security"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Manage Linked Accounts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="@dimen/card_view_padding"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/padding_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_placeholder"
                    app:tint="@color/iconTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Linked Accounts"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connect or disconnect external accounts"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Section 2: Diary and Notifications -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diary and Notifications"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/textSecondary"
                android:paddingTop="@dimen/default_margin"
                android:paddingBottom="@dimen/padding_medium"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/default_margin" />

            <!-- Diary Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="@dimen/card_view_padding"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/padding_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/iconTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diary Settings"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage your food and activity diary"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Notification Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="@dimen/card_view_padding"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/padding_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_placeholder"
                    app:tint="@color/iconTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification Settings"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customize your notification preferences"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="@dimen/padding_medium" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        app:itemIconTint="@color/iconTint"
        app:itemTextColor="@color/textSecondary"
        app:menu="@menu/bottom_nav_menu"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/minimal_margin" />
</LinearLayout>
