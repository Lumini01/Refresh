<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium"
    tools:context=".Activity.ProfileActivity">

    <androidx.fragment.app.FragmentContainerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@color/colorPrimary"
        android:elevation="4dp">

        <!-- Back Arrow -->
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@null"
            android:contentDescription="Back Arrow"
            android:padding="@dimen/padding_small"
            android:src="@drawable/ic_back_arrow" />

        <!-- Title -->
        <TextView
            android:id="@+id/toolbar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Profile"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_size_large" />

        <!-- Gear Icon -->
        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@null"
            android:contentDescription="Settings"
            android:padding="@dimen/padding_small"
            android:src="@drawable/ic_settings" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Section -->
            <LinearLayout
                android:id="@+id/profileSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_medium"
                android:orientation="vertical">

                <!-- Profile Picture Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:background="@drawable/card_background"
                    android:orientation="horizontal"
                    android:padding="@dimen/card_view_padding">

                    <!-- Profile Picture -->
                    <ImageView
                        android:id="@+id/profilePicture"
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:layout_marginEnd="@dimen/padding_medium"
                        android:contentDescription="Profile Picture"
                        android:src="@drawable/ic_profile" />

                    <!-- Name and Age -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/profileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/text_size_large" />

                        <TextView
                            android:id="@+id/profileAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age: 25"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/text_size_small" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Current Weight Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:padding="@dimen/card_view_padding">

                    <TextView
                        android:id="@+id/currentWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Weight: [value]"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>

                <!-- Goal Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:padding="@dimen/card_view_padding">

                    <TextView
                        android:id="@+id/weightGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goal: Gain/Lose/Maintain Weight"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>

                <!-- Diet Type Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:padding="@dimen/card_view_padding">

                    <TextView
                        android:id="@+id/dietType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diet: Vegan/Vegetarian/Gluten-Free, etc."
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Section 1: Account -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:paddingTop="@dimen/padding_medium"
                android:paddingBottom="@dimen/padding_small"
                android:text="Customization"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold" />

            <!-- Account Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small"
                android:background="@drawable/card_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/card_view_padding">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_placeholder"
                    app:tint="@color/iconTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_medium"
                        android:text="Personal Info"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_medium"
                        android:text="Manage your personal details"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>

            <!-- Change Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small"
                android:background="@drawable/card_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/card_view_padding">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_placeholder"
                    app:tint="@color/iconTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_medium"
                        android:text="Diet Recommendations"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_medium"
                        android:text="Manage your diet recommendations"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>

            <!-- Manage Linked Accounts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small"
                android:background="@drawable/card_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/card_view_padding">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_placeholder"
                    app:tint="@color/iconTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_medium"
                        android:text="Dietary Preferences"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_medium"
                        android:text="Set your preferences"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small"
                android:background="@drawable/card_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/card_view_padding">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/iconTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_medium"
                        android:text="Water Habits"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_medium"
                        android:text="Set your daily water goals"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
