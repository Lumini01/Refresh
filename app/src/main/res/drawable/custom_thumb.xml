<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- Increase the size for a nicer, more prominent thumb -->
    <size
        android:width="36dp"
        android:height="36dp" />
    <!-- Create a vertical gradient for a subtle depth effect -->
    <gradient
        android:angle="90"
        android:endColor="#2196F3"
        android:startColor="#3F51B5" />
    <!-- Add a white border to make the thumb pop -->
    <stroke
        android:width="4dp"
        android:color="#444444" />
</shape>